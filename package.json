{
  "name": "puzzle-game",
  "version": "1.0.0",
  "description": "A fully functional 2D jigsaw puzzle game built with HTML5 Canvas and TypeScript. Supports 30-300 puzzle pieces with drag-and-drop gameplay.",
  "private": true,
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "tsc",
    "build:css": "sass src/styles.scss dist/styles.css",
    "dev": "npm-run-all --parallel watch:ts watch:css serve",
    "watch:ts": "tsc -w",
    "watch:css": "sass --watch src/styles.scss dist/styles.css",
    "serve": "node devserver.js",
    "test": "echo \"No tests yet\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.93.0",
    "typescript": "^5.9.2",
    "npm-run-all": "^4.1.5"
  }
}
